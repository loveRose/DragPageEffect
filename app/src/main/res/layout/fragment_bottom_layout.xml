<?xml version="1.0" encoding="utf-8"?>
<com.app.lvyerose.drag.dragpageeffect.view.BottomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:text="精彩推荐"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="98dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/item_img_5" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="98dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/item_img_6" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="98dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/item_img_7" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="98dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/item_img_8" />
        </LinearLayout>
    </LinearLayout>
</com.app.lvyerose.drag.dragpageeffect.view.BottomScrollView>